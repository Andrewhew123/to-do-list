    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    
    <title>To Do List</title>
</head>
<body class="body">

    <div class="container">

        <div class="to-do-box">

            <div class="to-do-innerbox">
                <h1>To do list</h1>

                <hr>

                <h3>Edit</h3>

                <form action="/todo" method="POST">
                    <%- include('_form_fields') %>
                </form>
            </div>
            
        </div>


    </div>
