<style>
    .body{
        background-color: aquamarine;
    }

    .to-do-box{
        background-color: red;
        width: 400px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: white;
        border-radius: 5px;
        border: 2px solid black;
        box-shadow: 5px 5px #555;
        padding: 40px;
    }

    .to-do-innerbox{
        margin: 0 auto;
        
    }
</style>

